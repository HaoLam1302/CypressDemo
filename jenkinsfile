pipeline{
    agent any
    tools {nodejs "node"}

    stages {
        stage('cypress paralell tests'){
            parallel {
                stage('tester A'){
                    steps{
                        bat "NO_COLOR=1 npm run cy:parallel"
                    }
                }

                 stage('tester B'){
                    steps{
                        bat "NO_COLOR=1 npm run cy:parallel"
                    }
                }

                stage('tester C'){
                    steps{
                        bat "NO_COLOR=1 npm run cy:parallel"
                    }
                }
            }
        }
    }
}